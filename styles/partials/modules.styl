.game
  position: absolute

.name
  position: absolute
  width: 100%
  text-align: center

  > h1
    margin-bottom: 10px

.textfield
  width: 50%
  height: 32px
  height: 2rem
  text-align: center
  margin-bottom: 15px

.submit
  display: block
  font-size: 2rem
  margin-left: auto
  margin-right: auto
  background-color: transparent
  border: none
  color: #ffffff

  &:hover
    opacity: .8

.referee
  color: #000000
  a
    color: #000000

.game-controls
  margin: 40px

.players
  margin: 40px

  ul
    padding: 10px

.scoreboard
  position: absolute
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, .5)
  text-align: center
  overflow-y: scroll

  > h1
    font-size: 32px
    font-size: 2rem
    font-style: italic
    margin-top: 150px
    padding: 15px

  > h2
    font-size: 24px
    font-size: 1.5rem
    padding: 10px

  > h3
    margin-top: 25px;

  > ul
    display: block
    background-color: #999999
    width: 80%
    margin-top: 10px
    margin-bottom: 50px
    margin-left: auto
    margin-right: auto
    padding: 25px

    > li
      position: relative
      background-color: rgba(0, 0, 0, .3)

      &:nth-child(2n)
        background-color: rgba(0, 0, 0, .1)

      > p
        display: inline-block
        width: 33%

.countdown
  position: fixed
  width: 100%
  background-color: rgba(0, 0, 0, .5)
  padding: 15px
  text-align: center

  > h1
    font-size: 32px
    font-size: 2rem
    padding-top: 20px
    padding-bottom: 0
